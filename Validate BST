class Solution {
public:
    bool isValidBST_helper(TreeNode* root,long long int lb, long long int ub){
        if(!root) return true;

        if((root->val > lb && root->val < ub) && isValidBST_helper(root->left,lb,root->val) && isValidBST_helper(root->right,root->val,ub)){
            return true;
        }
        else{
            return false;   

        }

    }
    bool isValidBST(TreeNode* root) {
        long long int lowerBound = -4294967296;
        long long int upperBound = 4294967296;

        return isValidBST_helper(root,lowerBound,upperBound);

    } 
};
